<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpLayout"
        android:orientation="vertical" android:background="#0000FF">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@drawable/signup" android:id="@+id/imageView"
            android:scaleType="fitXY"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/sign_up_layout_edtEmail"
            android:background="#ff8000"
            android:hint="Please Enter Email Address"
            android:drawableRight="@drawable/email"
            android:textColor="#fff"
            android:inputType="textEmailAddress"
            android:layout_marginTop="5dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/sign_up_layout_edtUsername"
            android:background="#ff8000"
            android:hint="Please Enter Username"
            android:drawableRight="@drawable/username"
            android:textColor="#fff"
            android:inputType="text"
            android:layout_marginTop="5dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/sign_up_layout_edtPassword"
            android:background="#ff8000"
            android:hint="Please Enter Password"
            android:drawableRight="@drawable/lock"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/sign_up_layout_edtConfirmPassword"
            android:background="#ff8000"
            android:hint="Please Confirm Password"
            android:drawableRight="@drawable/confirm"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"/>
    <Button
            android:text="Sign Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/sign_up_layout_btnSignUp"
            android:background="#7f00ff" android:layout_marginTop="10dp" android:textSize="30sp"
            android:textColor="#fff"/>
    <Button
            android:text="Log In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/sign_up_layout_btnLogin"
            android:background="#7f00ff" android:layout_marginTop="10dp" android:textSize="30sp"
            android:textColor="#fff"/>
</LinearLayout>